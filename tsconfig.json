{
    "compilerOptions": {
      "target": "es2019",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib": [
        "es2019"
      ],
      "sourceMap": false,
      "outDir": "dist",
      "allowJs": true,
      // "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "./node_modules/*",
      "dist"
    ]
  }